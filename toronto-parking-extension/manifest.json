{
  "manifest_version": 3,
  "name": "Toronto Parking Automator",
  "version": "1.4",
  "description": "Automates Toronto parking ticket lookup and extracts details.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://secure.toronto.ca/webapps/parking/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://secure.toronto.ca/webapps/parking/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}